@page
@model WebForm.Pages.Shared.QuanLyNhanVien_SuaModel
@{
    ViewData["Title"] = "Website Quản Lý Tour";
    Layout = "_Layout";
}
@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@using DTO;
@{
    var str = HttpContext.Session.GetString("editnhanvien");
    var obj = JsonConvert.DeserializeObject<NhanVienDTO>(str);
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sửa Nhân Viên</h4>
                        <form class="forms-sample" method="post">
                            <div class="form-group">
                                <label for="exampleInputName1">Mã Nhân Viên</label>
                                <input type="text" class="form-control" asp-for="nhanvien.Id_NV" value="@obj.Id_NV" 
                                       placeholder="Mã Nhân Viên" readonly>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Họ tên</label>
                                <input type="text" class="form-control" required asp-for="nhanvien.Hoten_NV" value="@obj.Hoten_NV"
                                       placeholder="Họ tên">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Email</label>
                                <input type="text" class="form-control" required asp-for="nhanvien.Email_NV" value="@obj.Email_NV"
                                       placeholder="Email">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Số điện thoại</label>
                                <input type="text" class="form-control" required asp-for="nhanvien.Sdt_NV" value="@obj.Sdt_NV"
                                       placeholder="Số điện thoại">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Giới tính</label>
                                <select class="form-control" asp-for="gioitinh">
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                </select>
                            </div>
                            <input type="submit" value="Sửa" class="btn btn-primary mr-2" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>